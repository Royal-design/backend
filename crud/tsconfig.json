{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "types": ["node"],
    "lib": ["esnext"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts", "types"],
  "exclude": ["node_modules", "dist"]
}
